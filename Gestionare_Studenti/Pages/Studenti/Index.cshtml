@page 
@model Gestionare_Studenti.Pages.Studenti.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].DataInrolare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Departament.NumeDepartament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].StudentCursuri)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StudentD.Studenti)
        {
            string selectedRow = "";
            if (item.ID == Model.StudentID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInrolare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departament.NumeDepartament)
            </td>
            <td>
                @{
                    foreach (var curs in item.StudentCursuri)
                    {
                          @curs.Curs.NumeCurs <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
